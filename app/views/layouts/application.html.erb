<!DOCTYPE html>
<html>
  <head>
    <title>Shop</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  <nav class="navbar navbar-default">
    <div class="navbar-header">
      <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#main-menu" aria-expanded="false">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <a href="/" class="logo">
        <span class="logo-img"><img src="/assets/berry.png" alt="" class="img-responsive"></span>
        <i>Berries-shop</i>
      </a>
    </div>
    <div class="collapse navbar-collapse" id="main-menu" >
      <ul class="nav navbar-nav">
        <li class="active"><%= link_to "Home", '/' %></li>
        <li class="active"><%= link_to "Products", '/products' %></li>
      </ul>
      <div class="nav navbar-nav navbar-right">
        <% if current_user %>
            <ul>
              <li><%= current_user.email %></li>
              <li class="btn btn-info"><%= link_to "Log out", logout_path, method: "delete" %></li>
            </ul>
        <% else %>
            <ul>
              <li class="btn btn-info"><%= link_to "Login", 'login' %></a></li>
              <li class="btn btn-info"><%= link_to "Signup", 'signup' %></a></li>
            </ul>
        <% end %>
      </div>
    </div>
  </nav>
  <div class="mini-basket">
    <div class="mini-basket-list">
      <h4><%= link_to 'Your Cart', @cart %></h4>
      <div id="cart">
        <%= render @cart %>
      </div>
    </div>
  </div>


  <%= yield %>
  </div>
  </body>
</html>
