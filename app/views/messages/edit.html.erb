<h1>Editing message</h1>

<div class="col-md-12">
  <%= form_for :message, url: message_path(@message), method: :patch do |f| %>

      <% if @message.errors.any? %>
          <div id="error_explanation">
            <h2>
              <%= pluralize(@message.errors.count, "error") %> prohibited
              this article from being saved:
            </h2>
            <ul>
              <% @message.errors.full_messages.each do |msg| %>
                  <li><%= msg %></li>
              <% end %>
            </ul>
          </div>
      <% end %>

      <p>
        <%= f.label :title %><br>
        <%= f.text_field :title %>
      </p>

      <p>
        <%= f.label :text %><br>
        <%= f.text_area :text %>
      </p>

      <p>
        <%= f.submit %>
      </p>

  <% end %>

  <%= link_to 'Back', message_path %>
</div>
