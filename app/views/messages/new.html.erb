<div class="col-md-12">
  <%= form_for(@message) do |f| %>
      <div class="field form-group">
        <%= f.label :message, class:'control-label' %><br>
        <%= f.text_area :content, class:'form-control' %>
      </div>
      <% if current_user %>
          <div class="actions">
            <%= f.submit "Create", class:'btn btn-primary'  %>
          </div>
      <% end %>

  <% end %>
</div>
