<div class="messages">
  <div class="container">
    <% @messages.each do |message| %>
        <div class="col-md-12">
          <div class="message col-md-6">
            <p><%= current_user.nick %></p>
            <p class="time"><%= message.created_at %></p>
            <p class="content col-md-12"><%= message.content %></p>
            <p><%= link_to 'Edit', edit_message_path(message), class: "glyphicon glyphicon-edit" %></p>
            <p class="del"><%= link_to '', message_path(message), class: "glyphicon glyphicon-remove",
                                       method: :delete %></p>
          </div>
        </div>

    <% end %>
    <div class="col-md-12">
      <div class="col-md-6">
        <%= link_to 'New Message', "messages/new", class: "btn btn-info" %>
      </div>
    </div>
  </div>
</div>
