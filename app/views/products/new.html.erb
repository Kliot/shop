<%= form_for(@product) do |f| %>
    <div class="field">
      <%= f.label :title %><br>
      <%= f.text_field :title %>
    </div>
    <div class="field">
      <%= f.label :description %><br>
      <%= f.text_area :description, rows: 6 %>
    </div>
    <div class="actions">
      <%= f.submit "Create" %>
    </div>

<% end %>