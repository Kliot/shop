<%= form_for @product do |f| %>

    <% if @product.errors.any? %>
        <div id="error_explanation">
          <h2>
            <%= pluralize(@product.errors.count, "error") %> prohibited
            this article from being saved:
          </h2>
          <ul>
            <% @product.errors.full_product.each do |msg| %>
                <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
    <% end %>
    <div class="field form-group">
      <%= f.label :title, class:'control-label' %><br>
      <%= f.text_field :title %>
    </div>
    <div class="field form-group">
      <%= f.label :description, class:'control-label' %><br>
      <%= f.text_area :description, rows: 6, class:'form-control' %>
    </div>
    <div class="field form-group">
      <%= f.label :image_url, class:'control-label' %><br>
      <%= f.text_field :image_url %>
    </div>
    <div class="field form-group">
      <%= f.label :price, class:'control-label' %><br>
      <%= f.text_field :price %>
    </div>
    <div class="field form-group">
      <%= f.fields_for :images do |img_f| %>
          <%= render 'image_fields', f: img_f %>
      <% end %>
    </div>
    <div class="actions">
      <%= f.submit %>
    </div>

<% end %>