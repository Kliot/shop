<div class="list-products">
  <div class="container">
    <% cache ['page', Product.latest] do %>
        <% @products.each do |product| %>
            <% cache ['entry', product] do %>
                <div class="col-md-6">
                  <div class="products col-md-12">
                    <div class="col-md-4">
                      <p class="product-img">
                        <%= image_tag (product.image_url), class: "img-responsive" %>
                      </p>
                    </div>
                    <div class="col-md-8">
                      <h2><%= product.title %></h2>
                      <p class="shot-description"><%= product.description %></p>
                      <p class="price"><%= number_to_currency(product.price) %></p>
                      <%= button_to 'Buy', line_items_path(product_id: product), remote: true, class: "price-button" %>
                    </div>
                    <div class="col-md-12">
                      <p><%= link_to 'Edit', edit_product_path(product), class: "glyphicon glyphicon-edit" %></p>
                      <p><%= link_to 'Show', product_path(product), class: "glyphicon glyphicon-eye-open" %></p>
                    </div>
                    <p class="del"><%= link_to '',  product_path(product), class: "glyphicon glyphicon-remove",
                                               method: :delete %></p>
                  </div>
                </div>
            <% end %>
        <% end %>
    <% end %>
    <div class="col-md-12">
      <div class="col-md-6">
        <%=  link_to 'Create Product', "products/new" , class: "btn btn-info" %>
      </div>
    </div>
  </div>
</div>