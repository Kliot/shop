<div class="list-products">
  <div class="container">
        <div class="products col-md-12">
          <div class="col-md-2">
            <p class="product-img"><%= image_tag (@product.image_url), class: "img-responsive" %></p>
          </div>
          <div class="col-md-10">
            <h2><%= @product.title %></h2>
            <p><%= @product.description %></p>
            <p class="price"><%= number_to_currency(@product.price) %></p>
            <%= button_to 'Buy', line_items_path(product_id: @product), class: "price-button" %>
          </div>
          <div class="col-md-12">
            <p><%= link_to 'Edit', edit_product_path(@product), class: "glyphicon glyphicon-edit" %></p>
            <p><%= link_to 'Back to product list', products_path %></p>
          </div>
          <p class="del"><%= link_to '',  product_path(@product), class: "glyphicon glyphicon-remove",
                                     method: :delete %></p>
        </div>
  </div>
</div>
