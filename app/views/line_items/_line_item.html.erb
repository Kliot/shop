<% if line_item == @current_item %>
    <li id="current_item">
<% else %>
    <li>
<% end %>
  <p class="product-img"><%= image_tag (line_item.product.image_url), class: "img-responsive" %></p>
  <span><%= line_item.quantity %> &times; <%= line_item.product.title %></span>
  <span><%= number_to_currency(line_item.total_price) %></span>
  <span class="del"><%= link_to '',  line_item, class: "glyphicon glyphicon-remove",
                                method: :delete %></span>
</li>